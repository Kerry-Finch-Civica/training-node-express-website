extends layout.pug

block header
  title Edit recipe

block content
  .py-3.text-center
    h2.bd-title Edit a recipe
  .row
    form.w-100.needs-validation(method='post')
      .mb-3
        label(for='title') Title
        input.form-control(type='text' id='title' name='title' value=`${recipe.title}`)
      .mb-3
        label(for='short-description') Description
        textarea.form-control(id='short-description' name='short_description' rows='3' columns='30') #{recipe.short_description}
      .mb-3
        label(for='preparation-time') Preparation time
        input.form-control(type='text' id='preparation-time' name='preparation_time' value=`${recipe.preparation_time}`)
      input.btn.btn-primary.btn-lg(type='submit', value='Save')