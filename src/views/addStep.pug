extends layout.pug

block header
  title Add a recipe step

block content
  .py-3.text-center
    h2.bd-title Add a recipe step to #{recipe.title}
  .row
    form.w-100.needs-validation(method='post')
      .mb-3
        label(for='step_number') Step number
        input.form-control(type='text' id='step-number' name='step_number') 
      .mb-3
        label(for='step_text') Step text
        input.form-control(type='text' id='step-text' name='step_text')
      input.btn.btn-primary.btn-lg(type='submit', value='Save')
    